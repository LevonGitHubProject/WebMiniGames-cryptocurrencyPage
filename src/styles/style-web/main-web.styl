container-background-color = rgb(228, 224, 214);
header-background-color = rgb(10, 34, 44);
footer-background-color = rgb(10, 34, 44);
button-background-color = darkolivegreen;
button-color = white;
button-border-color = darkolivegreen;

a {
  text-decoration: none;
  color: footer-background-color;
}

.aside {
  width: 250px;
  min-height: 100vh;
  background-color: container-background-color;
  opacity: 0.7;
  margin: 0 30px 0 20px;
  border-radius: 55px;
  justify-content: center;
  text-align: center;
  padding: 15px;
}

.navigation {
  width: 200px;
  min-height: 100vh;
  background-color: container-background-color;
  opacity: 0.7;
  margin: 0 0 0 25px;
  border-radius: 55px;
  justify-content: center;
  text-align: center;
  padding: 15px;
  opacity: 0.6;
}

.content-page {
  width: 680px;
  background-color: container-background-color;
  border-radius: 55px;
  opacity: 0.6;
  margin-left: 30px;
  padding: 25px;
}

.foot {
  width: 1350px;
  height: 150px;
  background-color: footer-background-color;
  margin-top: 20px;
  border-top-left-radius: 150px;
  border-top-right-radius: 150px;
  display: block;
}

.header {
  min-width: 1025px;
  height: 100px;
  background-color: header-background-color;
  border-bottom-left-radius: 150px;
  border-bottom-right-radius: 150px;
  z-index: 1;
}

.butt-log-reg {
  width: 80px;
  height: 25px;
  border-radius: 50px;
  margin: 10px 0 30px 70px;
  color: button-color;
  background-color: button-background-color;
  border-color: button-border-color;
}

.registor {
  width: 100%;
  height: 500px;
  justify-content: center;
  display: flex;
  text-align: center;
}